@using IdentityFrameWork.Models
@using Microsoft.AspNetCore.Identity
@model Goldvine_University.Models.ViewModel.LoginViewModel
@inject SignInManager<AppUser> signInManager

<div class="form-container">
    <h3>Login</h3>
    <form class="inner-container" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input">
            <i class="bi bi-person"></i>
            <input asp-for="UserName" type="text" placeholder="Email">
            @*<span asp-validation-for="UserName" class="text-danger"></span>*@
        </div>

        <div class="input">
            <i class="bi bi-lock"></i>
            <input asp-for="Password" class="password" type="password" placeholder="Password">
            <i class="bi bi-eye reveal"></i>
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
        </div>
        <div class="checkbox">
            <label>@*Remember Me?*@</label>
            <input asp-for="RememberMe" type="checkbox" placeholder="Remember Me">
            @Html.DisplayNameFor(m => m.RememberMe)
        </div>
        <button type="submit" class="btn btn-success form-control">Log in</button>
        <div class="submit">
            @*<a asp-action="Register" class="register" id="register" asp-area="" asp-controller="Account"> Register Account</a>*@
            <a asp-action="ForgotPassword" asp-controller="Account"> Forgot your passoword?</a>
        </div>
    </form>


