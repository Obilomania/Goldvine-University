@model Goldvine_University.Models.Post

<form method="post" asp-action="Detail">
    
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center">Post Details</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" disabled style="resize:none;" rows="3"></textarea>
        </div>

      <a asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success" style="width:150px" >Edit</a>
        <a asp-controller="Post" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 