@using Goldvine_University.Data.Enum
@model Photo




<form method="post" asp-action="Create" enctype="multipart/form-data" class="container">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center">Add Photo</h2>
            <hr />
        </div>

        <br />

        
<div class="imageform mb-3">
    <div class="grid">
        <div class="form-element">
            <label asp-for="Image" class="control-label" id="file-1-preview">
                <img src="https://bit.ly/3ubuq5o" alt="">
                <div>
                    <span>+</span>
                </div>
            </label>
        </div>
    </div>
</div>
<br />
       
    <div class="form-group">
        <label asp-for="Image" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Image" type="file" name="file" id="file-1"  class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <br />
    <br />

        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewBeforeUpload(id) {
            document.querySelector("#" + id).addEventListener("change", function(e) {
                if (e.target.files.length == 0) {
                    return;
                }
                let file = e.target.files[0];
                let url = URL.createObjectURL(file);
                document.querySelector("#" + id + "-preview div").innerText = file.name;
                document.querySelector("#" + id + "-preview img").src = url;
            });
        }

        previewBeforeUpload("file-1");
        previewBeforeUpload("file-2");
        previewBeforeUpload("file-3");
    </script>
    }
